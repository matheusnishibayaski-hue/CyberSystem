{
  "name": "secure-web-security",
  "version": "1.0.0",
  "description": "Sistema de segurança web com autenticação e proteção contra vulnerabilidades OWASP",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "server": "nodemon src/server.js",
    "dev": "nodemon src/server.js",
    "worker": "node src/workers/scanWorker.js",
    "worker:dev": "nodemon src/workers/scanWorker.js",
    "lint": "npm --prefix frontend run lint",
    "lint:frontend": "npm --prefix frontend run lint",
    "test": "jest",
    "db:init": "node src/database/init.js",
    "db:seed": "node scripts/seed-data.js",
    "security-scan": "powershell -ExecutionPolicy Bypass -File scripts/security-scan.ps1",
    "zap-scan": "powershell -ExecutionPolicy Bypass -File scripts/zap-scan-simple.ps1",
    "zap-scan:auto": "powershell -ExecutionPolicy Bypass -File scripts/zap-scan-simple.ps1 -AutoStart",
    "zap-scan:full": "powershell -ExecutionPolicy Bypass -File scripts/zap-scan.ps1",
    "zap-scan:full:auto": "powershell -ExecutionPolicy Bypass -File scripts/zap-scan.ps1 -AutoStart"
  },
  "keywords": [
    "security",
    "web",
    "authentication",
    "owasp",
    "cybersecurity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.980.0",
    "@azure/identity": "^4.6.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.67.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-flow": "^4.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.3"
  },
  "overrides": {
    "fast-xml-parser": "5.3.4"
  }
}
